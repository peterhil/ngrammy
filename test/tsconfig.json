{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2015",
        "lib": ["es2017"],
        "declaration": false,
        "esModuleInterop": true,
        "inlineSourceMap": true,
        "moduleResolution": "node",
        "noImplicitAny": false,
        "removeComments": true
    },
    "include": [
        "scripts/**/*.ts",
        "src/**/*.ts",
        "node_modules/lodash-es/**/*.js"
    ],
    "exclude": [
        "node_modules",
    ]
}
