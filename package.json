{
    "name": "ngram-search-index",
    "version": "0.1.0",
    "description": "N-gram search index that is character based and supports Unicode. Useful for implementing autocomplete in functional programming style.",
    "author": "Peter Hillerstr√∂m <peter.hillerstrom@gmail.com>",
    "license": "MIT",
    "homepage": "https://github.com/peterhil/ngram-search-index#readme",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/peterhil/ngram-search-index.git"
    },
    "bugs": {
        "url": "https://github.com/peterhil/ngram-search-index/issues"
    },
    "devDependencies": {
        "typescript": "^4.3.5",
        "tslib": "^2.3.0",
        "tsdx": "^0.14.1",
        "size-limit": "^5.0.1",
        "husky": "^7.0.1",
        "@size-limit/preset-small-lib": "^5.0.1"
    },
    "scripts": {
        "analyze": "size-limit --why",
        "size": "size-limit",
        "prepare": "tsdx build",
        "lint": "tsdx lint",
        "test": "tsdx test",
        "build": "tsdx build",
        "start": "tsdx watch"
    },
    "keywords": [
        "ngram",
        "search",
        "index",
        "bigram",
        "trigram",
        "unicode",
        "characters",
        "functional-programming",
        "autocomplete",
        "string-algorithm"
    ],
    "engines": {
        "node": ">=10"
    },
    "files": [
        "dist",
        "src"
    ],
    "main": "dist/index.js",
    "module": "dist/tsdx.esm.js",
    "typings": "dist/index.d.ts",
    "husky": {
        "hooks": {
            "pre-commit": "tsdx lint"
        }
    },
    "prettier": {
        "trailingComma": "es5",
        "singleQuote": true,
        "semi": true,
        "printWidth": 80
    },
    "size-limit": [
        {
            "limit": "10 KB",
            "path": "dist/tsdx.cjs.production.min.js"
        },
        {
            "limit": "10 KB",
            "path": "dist/tsdx.esm.js"
        }
    ]
}
