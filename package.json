{
    "name": "ngrammy",
    "version": "0.1.0",
    "description": "N-gram search index that is character based and supports Unicode. Useful for implementing autocomplete in functional programming style.",
    "author": "Peter Hillerstr√∂m <peter.hillerstrom@gmail.com>",
    "license": "MIT",
    "homepage": "https://github.com/peterhil/ngrammy#readme",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/peterhil/ngrammy.git"
    },
    "bugs": {
        "url": "https://github.com/peterhil/ngrammy/issues"
    },
    "devDependencies": {
        "@size-limit/preset-small-lib": "^5.0.1",
        "@types/mocha": "^8.2.3",
        "@types/tap": "^15.0.5",
        "@typescript-eslint/eslint-plugin": "^4.28.3",
        "@typescript-eslint/parser": "^4.28.3",
        "eslint": "^7.31.0",
        "fast-check": "^2.17.0",
        "husky": "^7.0.1",
        "mocha": "^9.0.2",
        "rambda": "^6.8.2",
        "size-limit": "^5.0.1",
        "source-map-support": "^0.5.19",
        "tap": "^15.0.9",
        "ts-mocha": "^8.0.0",
        "ts-node": "^10.1.0",
        "tsdx": "^0.14.1",
        "tslib": "^2.3.0",
        "typescript": "^4.3.5"
    },
    "scripts": {
        "analyze": "size-limit --why",
        "size": "size-limit",
        "prepare": "tsdx build",
        "lint": "tsdx lint src test",
        "coverage": "TS_NODE_PROJECT=tsconfig.test.json tap --ts --no-browser --coverage --coverage-report=html --reporter=dot 'src/**/*.test.ts'",
        "test": "TS_NODE_PROJECT=tsconfig.test.json tap --ts --reporter=dot 'src/**/*.test.ts'",
        "build": "tsdx build",
        "start": "tsdx watch"
    },
    "keywords": [
        "ngram",
        "search",
        "index",
        "bigram",
        "trigram",
        "unicode",
        "characters",
        "functional-programming",
        "autocomplete",
        "string-algorithm"
    ],
    "engines": {
        "node": ">=10"
    },
    "files": [
        "dist",
        "src"
    ],
    "main": "dist/index.js",
    "module": "dist/ngrammy.esm.js",
    "typings": "dist/index.d.ts",
    "husky": {
        "hooks": {
            "pre-commit": "tsdx lint"
        }
    },
    "prettier": {
        "trailingComma": "es5",
        "singleQuote": true,
        "semi": false,
        "printWidth": 80
    }
}
